{
    "lwc": {
        "modules": [
            {
                "dir": "<rootDir>/src/modules"
            }
        ]
    },
    "routes": [
        {
            "id": "app",
            "path": "/",
            "rootComponent": "dad/app",
            "layoutTemplate": "<layoutsDir>/main.html"
        }
    ],
    "assets": [
        {
            "alias": "assetsDir",
            "dir": "<rootDir>/src/assets",
            "urlPath": "/public/assets"
        },
        {
            "file": "<rootDir>/src/serviceWorkers/sw.js",
            "urlPath": "/sw.js"
        }
    ]
}