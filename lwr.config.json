{
    "lwc": {
        "modules": [
            {
                "dir": "<rootDir>/src/modules"
            }
        ]
    },
    "routes": [
        {
            "id": "app",
            "path": "/",
            "rootComponent": "dad/app",
            "layoutTemplate": "<layoutsDir>/main.html"
        }
    ],
    "errorRoutes":[
        {
            "id":"not_found",
            "status":404,
            "rootComponent":"error/notFound"
        }
    ],
    "assets": [
        {
            "file": "<rootDir>/src/serviceWorkers/sw.js",
            "urlPath": "/sw.js"
        },
        {
            "dir": "<rootDir>/src",
            "urlPath": "/public"
        }
    ]
}