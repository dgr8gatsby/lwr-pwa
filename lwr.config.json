{
    "lwc": {
        "modules": [
            {
                "dir": "<rootDir>/src/modules"
            }
        ]
    },
    "routes": [
        {
            "id": "app",
            "path": "/",
            "rootComponent": "dad/app",
            "layoutTemplate": "<layoutsDir>/main.html"
        },
        {
            "id": "named-page",
            "path": "/:namedPage",
            "rootComponent": "dad/app"
        }
    ],
    "assetDirs": [
        {
            "dir": "<rootDir>/src/serviceWorkers/sw.js",
            "path": "/public/sw.js"
        },
        {
            "dir": "<rootDir>/src",
            "path": "/public"
        }
    ]
}